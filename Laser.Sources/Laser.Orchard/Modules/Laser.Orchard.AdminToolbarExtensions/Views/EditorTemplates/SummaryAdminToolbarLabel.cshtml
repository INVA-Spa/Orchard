@using Laser.Orchard.AdminToolbarExtensions;
@using Laser.Orchard.Commons.Helpers;

@model Laser.Orchard.AdminToolbarExtensions.Models.SummaryAdminToolbarLabel

<div class="j_actlabel">
    
    @Html.TextBoxFor(m => m.Label, new { placeholder = T("Label"), @class = "text medium" })
    @Html.TextBoxFor(m => m.Area, new { placeholder = T("Area"), @class = "text medium" })
    @Html.TextBoxFor(m => m.Controller, new { placeholder = T("Controller"), @class = "text medium" })
    <br />
    @Html.TextBoxFor(m => m.Action, new { placeholder = T("Action"), @class = "text medium" })
    @Html.TextBoxFor(m => m.Parameters, new { placeholder = T("Parameters"), @class = "text medium" })
    @Html.TextBoxFor(m => m.CustomUrl, new { placeholder = T("Custom URL"), @class = "text medium" })
    <br />
    @Html.DropDownListFor(m => m.Target, new SelectListItem[] { 
        new SelectListItem{Selected = true, Text = ValidLabelTargets._blank.ToString(), Value = ValidLabelTargets._blank.ToString()}, 
        new SelectListItem{Selected = false, Text = ValidLabelTargets._self.ToString(), Value = ValidLabelTargets._self.ToString()} 
    })
    <i class="fa fa-times" style="color: red"></i>
    @Html.LinkToRemoveNestedForm(T("Remove").Text, ".j_actlabel", "input.ph-mark-for-delete")

</div>
