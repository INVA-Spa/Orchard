<?xml version="1.0"?>
<Orchard>
  <Recipe>
    <Name>Communication Gateway - default</Name>
    <Description>
      Create Standard configuration For Communication
    </Description>
    <Author>Lorenzo Frediani Laser srl</Author>
    <WebSite>Laser-group.com</WebSite>
    <Tags></Tags>
    <Version>1.0</Version>
  </Recipe>
  <Feature enable="Laser.Orchard.CommunicationGateway,Laser.Orchard.Facebook,Laser.Orchard.Twitter,Laser.Orchard.Queries" />
  <Metadata>
    <Types>
        <CommunicationAdvertising>
          <TwitterPostPart TwitterPostPartSettingVM.Title="{Content.DisplayText}" TwitterPostPartSettingVM.Image="{Content.Fields.CommunicationAdvertisingPart.Gallery}" TwitterPostPartSettingVM.Description="{Content.Body}"/>
        </CommunicationAdvertising>
    </Types>
  </Metadata>
  <Migration features="*"/>
</Orchard>

