@model Laser.Orchard.MailCommunication.Models.MailCommunicationPart
@{
    Script.Require("JQuery").AtHead();
    Script.Require("jQueryUI_Tabs").AtHead();
    Style.Require("FontAwesome430").AtHead();

}
@using (Script.Foot()) {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".mail-comm-wrapper").wrapAll("<div id='mail-comm-container' class='comm-tabbed' />");
        });

        $(document).ready(function () {
            $(".comm-tabbed").wrapAll("<div id='tab-folder-container' />");
            $(".tab-folder").each(function (index) {
                $("#tab-folder-container ul").append('<li>' + $(this).html() + '</li>');
                $(this).hide();
            });
            $("#tab-folder-container").tabs();
        });

    </script>
}
<ul class="comm-tabbed">
</ul>

<div class="tab-folder">
    <a href="#mail-comm-container"><i class="fa fa-envelope"></i>@T("Email")</a>
</div>
<div class="tab-folder">
    <a href="#push-comm-container"><i class="fa fa-mobile"></i>@T("Push")</a>
</div>
<div class="tab-folder">
    <a href="#sms-comm-container"><i class="fa fa-comment"></i>@T("SMS")</a>
</div>
<div class="tab-folder">
    <a href="#twitter-comm-container"><i class="fa fa-twitter"></i>@T("Twitter")</a>
</div>
<div class="tab-folder">
    <a href="#facebook-comm-container"><i class="fa fa-facebook"></i>@T("Facebook")</a>
</div>



<div id="twitter-comm-container" class="comm-tabbed">
    <p>Twitter Content</p>
</div>
<div id="facebook-comm-container" class="comm-tabbed">
    <p>FacebookContent</p>
</div>
<div id="push-comm-container" class="comm-tabbed">
    <p>Push Content</p>
</div>
<div id="sms-comm-container" class="comm-tabbed">
    <p>SMS Content</p>
</div>
