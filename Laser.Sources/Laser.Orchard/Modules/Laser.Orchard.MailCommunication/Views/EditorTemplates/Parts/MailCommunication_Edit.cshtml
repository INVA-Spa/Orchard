@model Laser.Orchard.MailCommunication.Models.MailCommunicationPart
@{
    Script.Require("JQuery").AtHead();
    Script.Require("jQueryUI_Tabs").AtHead();
}
@using (Script.Foot()) {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".mail-comm-wrapper").wrapAll("<div id='mail-comm-container' class='comm-tabbed' />");
        });

        $(document).ready(function () {
            $(".comm-tabbed").wrapAll("<div id='tab-folder-container' />");
            $(".tab-folder").each(function (index) {
                $("#tab-folder-container ul").append('<li>'+$(this).html()+'</li>');
                $(this).hide();
            });
            $("#tab-folder-container").tabs();
        });

    </script>
}
    <ul class="comm-tabbed">
