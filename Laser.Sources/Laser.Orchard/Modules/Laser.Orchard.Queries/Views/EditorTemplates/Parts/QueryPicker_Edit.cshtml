@model Laser.Orchard.Queries.ViewModels.QueryPickerVM
@{
    Script.Require("jQuery_UI_Multiselect_Widget").AtHead();
    Style.Require("jQuery_UI_Multiselect_Widget").AtHead();
    using (Script.Foot()) {
    <script type="text/javascript">
        $(function () {
            $("#@Html.FieldIdFor(m => m.SelectedIds)").multiselect();
        });
    </script>
    };
}
<fieldset>
    <legend>@T("User defined queries picker")</legend>
    @Html.LabelFor(m => m.SelectedIds, @T("Pick a user query"))
    @Html.ListBoxFor(m => m.SelectedIds, Model.AvailableQueries)
    @T("found {0:N0} items", Model.TotalItemsCount.Value)
</fieldset>
