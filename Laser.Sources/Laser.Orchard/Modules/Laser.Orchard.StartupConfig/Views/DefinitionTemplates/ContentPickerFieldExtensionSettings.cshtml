@model Laser.Orchard.StartupConfig.Settings.ContentPickerFieldExtensionSettings
<fieldset>
    @Html.CheckBoxFor(m => m.CascadePublish)
    <label class="forcheckbox" for="@Html.FieldIdFor(m => m.CascadePublish)">@T("Cascade Publish Action")</label>
    <span class="hint">@T("If checked, when the ContentItem is published also other ContentItems connected to it through the Content Picker Field will be published.")</span>
</fieldset>
<fieldset>
    @Html.CheckBoxFor(m => m.TranslateContents)
    <label class="forcheckbox" for="@Html.FieldIdFor(m => m.CascadePublish)">@T("Translate Items")</label>
    <span class="hint">@T("If checked, when the ContentItem is saved all the ContentItems connected to it through the Content Picker Field will also be changed with their localized version in the same culture, if it exists.")</span>
</fieldset>