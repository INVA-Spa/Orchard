@model Laser.Orchard.StartupConfig.Settings.ContentPickerFieldExtensionSettings
<fieldset>
    @Html.CheckBoxFor(m => m.CascadePublish)
    <label class="forcheckbox" for="@Html.FieldIdFor(m => m.CascadePublish)">@T("Cascade Publish Action")</label>
    <span class="hint">@T("If checked, when the ContentItem is published also other ContentItems connected to it through the Content Picker Field will be published.")</span>
</fieldset>