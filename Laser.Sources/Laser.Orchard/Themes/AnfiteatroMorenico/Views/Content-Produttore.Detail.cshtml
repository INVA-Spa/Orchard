@using Orchard.Utility.Extensions;
@{
    if (Model.ContentItem.TitlePart != null && Model.ContentItem.TitlePart.Title != null) {
        Layout.Title = Model.ContentItem.TitlePart.Title;
    }

    Model.Classes.Add("content-item");

    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();
    Model.Classes.Add(contentTypeClassName);

    var tag = Tag(Model, "article");
    var prodotti = Model.ContentItem.Produttore.Prodotti.ContentItems;
    WorkContext.Layout.Zones["WideContent"].Items.Clear();
    WorkContext.Layout.Zones["WideContent"].Add(New.WideContentMap(ContentItem: Model.ContentItem), "0");
    var cssClass = "prodotti";
    
}
<div class="row">
    <div class="col-xs-12 col-sm-12">
        <h1 class="item-title @cssClass">@Model.ContentItem.TitlePart.Title</h1>
                        @Model.ContentItem.MapPart.LocationInfo
                @if (Model.ContentItem.MapPart.LocationInfo != Model.ContentItem.MapPart.LocationAddress) {
                    <text>-</text> @Model.ContentItem.MapPart.LocationAddress
                }<br />
                @Model.ContentItem.Produttore.Telefono.Value<br/>
                <a href="mailto:@Model.ContentItem.Produttore.Email.Value">@Model.ContentItem.Produttore.Email.Value</a><br />

    </div>
</div>
@if (prodotti.Length > 0) {
<div class="space-20"></div>
<div class="row">
    <h4 class="item-subtitle @cssClass">@T("Products")</h4>
        @foreach (var prodotto in prodotti) {
            <div class="col-xs-12 col-sm-4 col-md-2"><a href="@Url.ItemDisplayUrl((Orchard.ContentManagement.IContent)prodotto)">
                @if (prodotto.Prodotti.Gallery.MediaParts.Count > 0) {
                    <img class="img-responsive" src="@Display.ResizeMediaUrl(Width: 720, Height: 600, Mode: "pad", Alignment: "middlecenter", Path: prodotto.Prodotti.Gallery.MediaParts[0].MediaUrl)" />
                } else {
                    <img class="img-responsive" src="http://placehold.it/720x600" />
                }
                </a>
            </div>
        }
</div>
}