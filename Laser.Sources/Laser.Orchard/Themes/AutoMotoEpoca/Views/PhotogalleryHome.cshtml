@{
    var contents = Model.ContentItems; 
}
<div class="photogallery">
    <div class="box-titolo-photogallery">
        <h2 class="titolo-photogallery">@T("PHOTOGALLERY")</h2>
    </div>
    <div class="row">
        @foreach (var content in contents) {
            var mediaUrl = Display.ResizeMediaUrl(Width: 820, Height: 420, Mode: "pad", PadColor: "#000000", Alignment: "middlecenter", Path: content.Immagine.Gallery.FirstMediaUrl);
            <div class="col-xs-12 col-sm-6 col-md-3">
                <a href="@content.Immagine.Gallery.FirstMediaUrl" data-lightbox="gallery">
                    <span class="box-img-gallery" style="background-image: url('@mediaUrl')"></span>
                </a>
            </div>
        }
    </div>
</div>
