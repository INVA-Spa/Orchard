@using Orchard.Mvc.Html;
@using Orchard.UI.Resources;
@using Orchard.Environment.Configuration

@model dynamic
@{ 
    Layout.Title = "Back Office - " + WorkContext.CurrentSite.SiteName;
    var folderStylePath = "~/ThemesAdmin/KrakeAdmin/Styles";
}
<section class="dashboard group">
    <h2 class="claim">@T("MyKrake&#8482; - UN'UNICA PIATTAFORMA PER PIÙ CANALI DI COMUNICAZIONE")</>
</section>
<div class="container roboto">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
            <img alt="piattaforma" class="img-responsive img-piattaforma" src="@folderStylePath/Images/piattaforma.png">
        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-7">
            <div class="space-20"></div>
            <div>
                <!-- Nav tabs -->
                <ul role="tablist" class="nav nav-tabs">
                    <li class="active" role="presentation">
                        <a data-toggle="tab" role="tab" aria-controls="mail-home" href="#mail-home">
                            <span class="cont">
                                <img class="img-responsive img-piattaforma-fasi" alt="krake" src="@folderStylePath/Images/icona-mail.png"></span>
                            <img class="img-responsive freccia" src="@folderStylePath/Images/freccia-mail.png">
                        </a>
                    </li>
                    <li role="presentation">
                        <a data-toggle="tab" role="tab" aria-controls="app-home" href="#app-home">
                            <span class="cont">
                                <img class="img-responsive img-piattaforma-fasi" alt="krake" src="@folderStylePath/Images/icona-app.png"></span>
                            <img class="img-responsive freccia" src="@folderStylePath/Images/freccia-app.png">
                        </a>
                    </li>
                    <li role="presentation">
                        <a data-toggle="tab" role="tab" aria-controls="web" href="#web">
                            <span class="cont">
                                <img class="img-responsive img-piattaforma-fasi" alt="krake" src="@folderStylePath/Images/icona-web.png"></span>
                            <img class="img-responsive freccia" src="@folderStylePath/Images/freccia-web.png">
                        </a>
                    </li>
                    <li role="presentation">
                        <a data-toggle="tab" role="tab" aria-controls="notifiche" href="#notifiche">
                            <span class="cont">
                                <img class="img-responsive img-piattaforma-fasi" alt="krake" src="@folderStylePath/Images/icona-notifiche.png"></span>
                            <img class="img-responsive freccia" src="@folderStylePath/Images/freccia-notifiche.png">
                        </a>
                    </li>
                    <li role="presentation">
                        <a data-toggle="tab" role="tab" aria-controls="sms" href="#sms">
                            <span class="cont">
                                <img class="img-responsive img-piattaforma-fasi" alt="krake" src="@folderStylePath/Images/icona-sms.png"></span>
                            <img class="img-responsive freccia" src="@folderStylePath/Images/freccia-sms.png">
                        </a>
                    </li>
                    <li role="presentation">
                        <a data-toggle="tab" role="tab" aria-controls="social" href="#social">
                            <span class="cont">
                                <img class="img-responsive img-piattaforma-fasi" alt="krake" src="@folderStylePath/Images/icona-social.png"></span>
                            <img class="img-responsive freccia" src="@folderStylePath/Images/freccia-social.png">
                        </a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    <div style="background-color: #A167A3" id="mail-home" class="tab-pane active" role="tabpanel">
                        <div class="testo-piattaforma-fasi">
                            <img class="img-responsive icone-bianche" src="@folderStylePath/Images/icona-mail-w.png">
                            <h2 class="titolo-icone">MAIL</h2>
                            <div class="clear"></div>
                            <b>@T("KRAKE&#8482;")</b> @T("potrà gestire, attraverso un ambiente di back office, campagne di marketing mirato, newsletter, ecc.")
                                       
                        </div>
                        <div style="background-image: url('@folderStylePath/Images/bg-mail.png')" class="bg-piattaforma-fasi"></div>
                    </div>
                    <div style="background-color: #EEB377" id="app-home" class="tab-pane" role="tabpanel">
                        <div class="testo-piattaforma-fasi">
                            <img class="img-responsive icone-bianche" src="@folderStylePath/Images/icona-app-w.png">
                            <h2 class="titolo-icone">@T("APP MOBILE")</h2>
                            <div class="clear"></div>
                            <b>@T("KRAKE&#8482;")</b> @T("permetterà di implementare e gestire più applicazioni mobile.") 
                        </div>
                        <div style="background-image: url('@folderStylePath/Images/bg-app.png')" class="bg-piattaforma-fasi"></div>
                    </div>
                    <div style="background-color: #D26774" id="web" class="tab-pane" role="tabpanel">
                        <div class="testo-piattaforma-fasi">
                            <img class="img-responsive icone-bianche" src="@folderStylePath/Images/icona-web-w.png">
                            <h2 class="titolo-icone">@T("WEB")</h2>
                            <div class="clear"></div>
                            <b>@T("KRAKE&#8482;")</b> @T("permetterà di implementare e gestire più siti web dal design responsivo.")
                                       
                        </div>
                        <div style="background-image: url('@folderStylePath/Images/bg-web.png')" class="bg-piattaforma-fasi"></div>
                    </div>
                    <div style="background-color: #447879" id="notifiche" class="tab-pane" role="tabpanel">
                        <div class="testo-piattaforma-fasi">
                            <img class="img-responsive icone-bianche" src="@folderStylePath/Images/icona-notifiche-w.png">
                            <h2 class="titolo-icone">@T("NOTIFICHE PUSH")</h2>
                            <div class="clear"></div>
                            @T("Con") <b>@T("KRAKE&#8482;")</b>, @T("l'app sarà sempre viva e attiva: notifiche push, anche personalizzate, garantiranno comunicazioni precise, puntuali e mirate")
                                       
                        </div>
                        <div style="background-image: url('@folderStylePath/Images/bg-notifiche.png')" class="bg-piattaforma-fasi"></div>
                    </div>
                    <div style="background-color: #A9D287" id="sms" class="tab-pane" role="tabpanel">
                        <div class="testo-piattaforma-fasi">
                            <img class="img-responsive icone-bianche" src="@folderStylePath/Images/icona-sms-w.png">
                            <h2 class="titolo-icone">SMS</h2>
                            <div class="clear"></div>
                           @T("Attraverso") <b>@T("KRAKE&#8482;")</b> @T("sarà possibile gestire campagne di marketing e comunicazione via SMS: una soluzione di facile utilizzo e di veloce attivazione e configurazione.")
                                       
                        </div>
                        <div style="background-image: url('@folderStylePath/Images/bg-sms.png')" class="bg-piattaforma-fasi"></div>
                    </div>
                    <div style="background-color: #539CB3" id="social" class="tab-pane" role="tabpanel">
                        <div class="testo-piattaforma-fasi">
                            <img class="img-responsive icone-bianche" src="@folderStylePath/Images/icona-social-w.png">
                            <h2 class="titolo-icone">SOCIAL</h2>
                            <div class="clear"></div>
                            @T("Con") <b>@T("KRAKE&#8482;")</b> @T("sarà possibile gestire flussi di comunicazione integrata attraverso i profili social.")
                        </div>
                        <div style="background-image: url('@folderStylePath/Images/bg-social.png')" class="bg-piattaforma-fasi"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

