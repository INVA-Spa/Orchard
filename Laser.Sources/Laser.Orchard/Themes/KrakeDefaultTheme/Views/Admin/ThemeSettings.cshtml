﻿@model KrakeDefaultTheme.Settings.ViewModels.ThemeSettingsViewModel

@{ Layout.Title = T("Krake default theme settings"); }

@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary();
    <fieldset>
        @Html.Label(T("Header logo URL").Text)
        @Html.TextBoxFor(m => m.HeaderLogoUrl, new { @class="text large"})
        <span class="hint">@T("type an URL for the header logo")</span>
    </fieldset>
    <fieldset>
        @Html.Label(T("Placeholder logo URL").Text)
        @Html.TextBoxFor(m => m.PlaceholderLogoUrl, new { @class = "text large" })
        <span class="hint">@T("type an URL for the placeholder logo")</span>
    </fieldset>
    <fieldset>
        @Html.Label(T("Baser line text").Text)
        @Html.TextBoxFor(m => m.BaseLineText, new { @class = "text large" })
        <span class="hint">@T("type a base line text")</span>
    </fieldset>

    <fieldset>
        <legend></legend>
        <button class="primaryAction" type="submit" name="submit.Save" value="submit.Save">@T("Save")</button>
    </fieldset>
}