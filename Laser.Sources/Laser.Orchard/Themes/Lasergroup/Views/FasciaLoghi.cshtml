@{
    dynamic item = Model.ContentItem;

    var medias = item.ShowcaseWidget.Gallery.MediaParts;
}

<div class="container text-center" id="showcase-loghi">
	<div class="row">

        @for (int i = 0; i < medias.Count; i++) {
		    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 text-center">
			    <img src="@medias[i].MediaUrl" class="img-responsive">
		    </div>
        }

	</div>
</div>