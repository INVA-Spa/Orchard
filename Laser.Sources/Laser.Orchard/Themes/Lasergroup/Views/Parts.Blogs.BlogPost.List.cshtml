@{
    IEnumerable<object> blogPosts = Model.ContentItems.Items;
}

<div id="news">
    <div class="news-top"></div>
    <div class="container-fluid">
        <div class="row">
            @foreach (dynamic post in blogPosts) {

                var item = post.ContentItem;
                
                <div class="col-xs-12 col-sm-6 col-md-4 box-all-news">
	                <div class="news-item">
		                <div class="news-item-photo-mask">
			                <a href="@item.AutoroutePart.Path">
				                <img src="@item.BlogPost.Image.FirstMediaUrl" class="img-responsive wp-post-image" alt="@item.BlogPost.Image.MediaParts[0].Title">
			                </a>
		                </div>
		                <div class="space-40"></div>
		                <h4 class="news-item-title"><a href="@item.AutoroutePart.Path">@item.TitlePart.Title</a></h4>
		                <h5 class="news-item-date">@item.CommonPart.CreatedUtc.Date.ToString("dd/MM/yyyy")</h5>
		                <div class="space-10"></div>
		                <p class="news-item-desc">@item.BlogPost.Sottotitolo.Value</p>
		                <div class="news-item-plus text-center"><a href="@item.AutoroutePart.Path">+</a></div>
	                </div>
                </div>
            }
        </div>
    </div>
</div>