@{
    Layout.Title = Model.Title;
    dynamic item = Model.ContentItem;
}

<div id="intro" style="height: auto;">
	<canvas id="intro-canvas" width="1920"></canvas>
	<div class="container container-desc clearfix">
		<div class="col-xs-12 col-sm-6 col-intro-desc">
			<h1 class="handel-got-d title">@Model.Title</h1>
			<h2 class="page-claim">@item.Blog.Sottotitolo.Value</h2>
			<div class="page-desc">
            </div>
		</div>
        
        @if (item.Blog.Gallery.Ids.Length > 0) {
            <div class="col-xs-12 col-sm-6 text-center">
                <img src="@item.Blog.Gallery.FirstMediaUrl" class="img-responsive">
            </div>
        }
    </div>
</div>