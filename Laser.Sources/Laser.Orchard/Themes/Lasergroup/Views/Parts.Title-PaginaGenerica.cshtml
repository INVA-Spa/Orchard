@{
    Layout.Title = Model.Title;
    dynamic item = Model.ContentItem;

    Layout.BaseClass = "page page-template navbar-fixed";
}
<div id="intro">
    <canvas id="intro-canvas"></canvas>
    <div class="container container-desc clearfix">
        <div class="col-xs-12 col-sm-8 col-intro-desc">
            <h1 class="handel-got-d title">@Model.Title</h1>
            <h2 class="page-claim">@item.PaginaGenerica.Sottotitolo.Value</h2>
        </div>
        @if (item.PaginaGenerica.Image.Ids.Length > 0) {
            <div class="col-xs-12 col-sm-4 text-center">
                <img src="@item.PaginaGenerica.Image.FirstMediaUrl"  title="@item.PaginaGenerica.Image.MediaParts[0].Title" alt="@item.PaginaGenerica.Image.MediaParts[0].AlternateText" class="img-responsive">
            </div>
        }
    </div>
</div>
<div class="container">
    <p>@Html.Raw(item.BodyPart.Text)</p>
</div>
