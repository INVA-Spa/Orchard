@{
    dynamic item = Model.ContentItem;
    string tipoContenuto = "";
    
    if (item.ContentType == "HtmlWidget") {
        tipoContenuto = item.HtmlWidget.Specializzazione.Value;
    }
}

@switch (tipoContenuto) {
    case "Link":
        @Display(New.HtmlLink(ContentItem: item));
        break;
    case "Immagine e Contenuto":
        @Display(New.HtmlImmagineContenuto(ContentItem: item));
        break;
    default:
        @Display(Model.Content)
            break;
}