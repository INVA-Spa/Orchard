@{
    dynamic item = Model.ContentItem;
    string tipoContenuto = item.HtmlWidget.Specializzazione.Value;
}

@switch (tipoContenuto) {
    case "Link":
        @Display(New.HtmlLink(ContentItem: item));
        break;
    case "Immagine e Contenuto":
        @Display(New.HtmlImmagineContenuto(ContentItem: item));
        break;
    case "Footer Logo":
        @Display(New.HtmlQuad_First(ContentItem: item));
            break;
    case "Footer Social":
        @Display(New.HtmlQuad_Fourth(ContentItem: item));
            break;
    case "Footer Testo":
            @Display(New.HtmlFooter(ContentItem: item));
            break;
    default:
        @Display(Model.Content)
            break;
}